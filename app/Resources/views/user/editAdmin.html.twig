{% block title %}Edition du compte - {{user.getLibelle}}{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}

	<fieldset>
		<legend>Edition du compte - <small>{{user.getLibelle}}</small></legend>
		{% form_theme form 'bootstrap_3_layout.html.twig' %}
		{{form_start(form)}}
			<div class="row">
				{{form_errors(form)}}
				{{form_row(form.nom)}}
				{{form_row(form.prenom)}}
				{{form_row(form.emission)}}
				{{form_row(form.email)}}
				<div class="form-group">
				  <label class="control-label" for="mdp">Mot de Passe</label>
				    <input id="mdp" name="mdp" placeholder="" class="form-control input-md" type="password">
				</div>

				<div class="form-group">
				  <label class="control-label" for="v_mdp">Verification MDP</label>
				    <input id="v_mdp" name="v_mdp" placeholder="" class="form-control input-md" type="password">
				</div>
				{{form_row(form.username)}}
				<div class="form-group">
					<label for="role" class="control-label">Droits</label>
					<select id="role" name="role" class="form-control">
						<option value="ROLE_INACTIF" {% if user.getRoles[0] == "ROLE_INACTIF" %}selected{% endif %}>Inactif</option>
						<option value="ROLE_USER" {% if user.getRoles[0] == "ROLE_USER" %}selected{% endif %}>Membre</option>
						<option value="ROLE_PROGRA" {% if user.getRoles[0] == "ROLE_PROGRA" %}selected{% endif %}>Programmateur</option>
						<option value="ROLE_SUPER_ADMIN" {% if user.getRoles[0] == "ROLE_SUPER_ADMIN" %}selected{% endif %}>Admin</option>
					</select>
				</div>
			</div>
		{{form_end(form)}}
	</fieldset>

{% endblock %}
